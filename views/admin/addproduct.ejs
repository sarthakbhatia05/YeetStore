<body>
    <%- include('./admin-navbar') %>


    <div class="container">
    <h3>Product Details</h3>

    <form class="user-info" action="/admin/addnewproduct" method="post">
        <label>Name</label>
        <input class="form-control" type="text" placeholder=""  name="name">

        <label>Description</label>
        <input class="form-control" type="text" placeholder="" value=""name="description">

        <label>Price</label>
        <input class="form-control" type="Number" placeholder="" value="" name="price">

        <label>Stock Count</label>
        <input class="form-control" type="Number" placeholder="1" value="1"name="stockCount">
        
        <label>Category</label><br>
        <select name="category" value="">
            <option selected="selected" > Select Category</option>
            <option value="mobiles"> Mobiles</option>
            <option value="clothes">Clothes</option>
            <option value="appliances">Appliances</option>
            <option value="laptops">Laptops</option>
            <option value="footwear">Footwear</option>
            <option value="watches">Watches</option>
        </select>
        <br>
        <label>Options</label>
        <input class="form-control" type="text" placeholder="Option1" value=""name="options">
        <input class="form-control" type="text" placeholder="Option2" value=""name="options">
        <input class="form-control" type="text" placeholder="Option3" value=""name="options">

        <br>
        <label>Images</label>
        <input class="form-control" type="text" placeholder="Image1" value="" name="image">
        <input class="form-control" type="text" placeholder="Image2" value="" name="image">
        <input class="form-control" type="text" placeholder="Image3" value="" name="image">

        <button  type="submit "class="search-button proceed"> Add Product </button>
    
    </form>
    
    </div>

    
<%- include('../footer') %>
</body>