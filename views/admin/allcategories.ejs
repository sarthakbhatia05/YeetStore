<body>
    <%-include('./admin-navbar') %>


<div class="categories-card">
    <h1 style="text-align: center;">All Categories</h1>
    <div class="categories-row">
        <% for(let product =0;product<(products.length)/2;product++) { %>
  <a  href="/admin/category?category=<%= products[product] %>"><div class="categories-column " >
      <h4><%= products[product].toUpperCase() %></h4>
  </div></a>
  
  <% } %>
    </div>
  <div class="categories-row">
    <% for(let product =3;product<products.length;product++){ %>
    <a  href="/admin/category?category=<%= products[product] %>"><div class="categories-column " >
        <h3><%= products[product].toUpperCase() %></h3>
    </div></a>
    <% } %>  
  </div>
    

</div>
<%- include('../footer') %>
</body>